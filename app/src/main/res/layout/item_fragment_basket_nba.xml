<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cd_item_fragment_basket_nba"
    style="@style/mCardView1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_fragment_basket_nba_player1"
            style="@style/mImageCrop1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"/>

        <View style="@style/mLine2"/>

        <ImageView
            android:id="@+id/iv_item_fragment_basket_nba_player2"
            style="@style/mImageCrop1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#9000"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_fragment_basket_nba_player1"
                style="@style/mTextViewLarge1"
                android:layout_marginRight="10dp"
                android:text="主队"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/tv_item_fragment_basket_nba_score"
                style="@style/mTextViewLarge1"
                android:text="VS"
                android:textColor="#fff"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/tv_item_fragment_basket_nba_player2"
                style="@style/mTextViewLarge1"
                android:layout_marginLeft="10dp"
                android:text="主队"
                android:textColor="#fff"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_fragment_basket_nba_time"
            style="@style/mTextViewSmall1"
            android:layout_marginTop="5dp"
            android:text="对战时间"
            android:textColor="#efff"/>

    </LinearLayout>

</android.support.v7.widget.CardView>